{
  "builds": [
    {
      "src": "api/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/app.ts" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
